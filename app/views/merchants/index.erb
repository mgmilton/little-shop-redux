<h1>All Merchants</h1>

<a href="/merchants/new">Create a merchant</a>
<% @merchants.each do |merchant| %>
<h3><a href="/merchants/<%= merchant.id %>"><%= merchant.id %></a></h3>
  <p><%= merchant.name %></p>
  <a href="/merchants/<%= merchant.id  %>/edit">Edit</a>
  <form action="/merchants/<%= merchant.id %>" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="delete"/>
  </form>
<% end %>
