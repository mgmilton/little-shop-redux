<h1>All Items</h1>

<% @items.each do |item| %>
<h3><a href="/items/<%= item.id %>"><%= merchant.id %></a></h3>
  <p><%= item.name %></p>
  <a href="/items/<%= item.id  %>/edit">Edit</a>
  <form action="/items/<%= item.id %>" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="delete"/>
  </form>
<% end %>
