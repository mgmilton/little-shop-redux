<form action="/items/<%= @item.id %>" method="POST">
  <p>Edit</p>
  <input type="hidden" name="_method" value="PUT" />
  <input type='text' name='item[name]' value="<%= @item.name %>"/><br/>
  <input type='text' name='item[description]' value="<%= @item.name %>"/><br/>
  <input type='decimal' name='item[price]' value="<%= @item.name %>"/><br/>
  <input type='text' name='item[image]' value="<%= @item.name %>"/><br/>
  <input type='submit'/>
</form>
